<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_two.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayoutTwo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Thêm ID mới cho CardView và LinearLayout -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewBookingTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_margin="8dp">

                <LinearLayout
                    android:id="@+id/linearLayoutTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textViewIdTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booking ID: " />
                    <TextView
                        android:id="@+id/textViewDateTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: " />
                    <TextView
                        android:id="@+id/textViewTimeTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: " />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>
